<%- include('header') -%>
<section class="main">
  <div class="container py-5 h-100 sub-cl">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div
          class="card bg-white bg-opacity-10 text-white card-sec"
          style="border-radius: 1rem"
        >
          <div class="card-body p-5 text-center">
            <a href="/" class="logout">
                <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl" style="color: #184faf;"></i>
              </a>
              <h6>back</h6>
            <div class="mt-md-4">
              <h2 class=" loginn fw-bold mb-2 text-uppercase text-dark display-6">Sign Up</h2>
              <form action="/signup" method="POST" class="pt-3" autocomplete="on">
                <div class="form-group form-primary mb-4 ">
                  <input
                    name="name"
                    type="text"
                    id="typeNameX"
                    class="form-control form-control-lg"
                    placeholder="Name"
                    required
                  /> 
                </div>
                <div class="form-group form-primary mb-4">
                  <input
                    name="email"
                    type="email"
                    id="typeEmailX"
                    class="form-control form-control-lg"
                    placeholder="Email"
                    required
                  />
                  <small class="form-text text-primary text-left">We'll never share your email with anyone else.</small>
                </div>

                <div class="form-group form-white mb-4">
                  <input
                  name="password"
                    type="password"
                    id="typePasswordX"
                    class="form-control form-control-lg"
                    placeholder="Password"
                    required
                  />
                </div>
                <br>
                <br>
                <form action="/signup" method="POST">
                  <button class="btn btn-outline-primary btn-lg px-5" id="logbtn" type="submit">
                    Sign Up
                  </button>
                </form>
                <br>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%-include('footer')-%>
