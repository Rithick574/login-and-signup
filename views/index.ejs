<%- include('header') -%>
<section class="main">
  <div class="container py-5 h-100 sub-cl">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div
          class="card bg-white bg-opacity-10 text-white card-sec"
          style="border-radius: 1rem"
        >
          <div class="card-body p-5 text-center">
            <div class="mt-md-4">
              <h2 class=" loginn fw-bold mb-2 text-uppercase text-dark display-6">Login system</h2>
              <span class="text-danger"><h6>Log in for the existing user</h6></span>
              <% if(err){ %>
                <h6 class="alert alert-danger"><%-err%></h6>
                <% } %>
                <% if(locals.logout){%>
                  <div class="alert alert-success text-center" id="errorMessage">
                    <%= logout %>
                  </div>
                  <%}%>
              <form action="/login" method="POST" class="pt-3" autocomplete="on">
                <div class="form-group form-primary mb-4">
                  <input
                    name="email"
                    type="email"
                    id="typeEmailX"
                    class="form-control form-control-lg"
                    placeholder="Email"
                    required
                  />
                  <small class="form-text text-primary text-left">We'll never share your email with anyone else.</small>
                </div>

                <div class="form-group form-white mb-4">
                  <input
                  name="password"
                    type="password"
                    id="typePasswordX"
                    class="form-control form-control-lg"
                    placeholder="Password"
                    required
                  />
                </div>
                <div class="signup-txt text-dark">
                  <p>Don't have an account? <a href="/signup" class="signup">Sign up here</a></p>
                </div>
                <form >
                  <button class="btn btn-outline-primary btn-lg px-5" id="logbtn" type="submit">
                    Login
                  </button>
                </form>
                <br>
                <div class="admin-control">
                  <a href="/admin_login" class="admin-link">Admin Control Panel
                    <i class="fa-solid fa-right-to-bracket" style="color: #090a0c;"></i>
                  </a>
              </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
 setTimeout(function() {
  var message = document.getElementById('errorMessage');
  if(message){
    message.style.display='none';
  }
 },3000);
</script>
<%-include('footer')-%>
