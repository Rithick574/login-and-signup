<%- include('header') -%>

<section class="main">
  <div class="container py-5 h-100 sub-cl">
    <div class="row d-flex justify-content-center allign-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div
        class="card bg-white bg-opacity-10 text-white card-sec "
        style="border-radius: 0.8rem"
        id="sqrdiv"
        >
        <div class="card-body p-5 text-center text-dark">
          <a href="/admin_home" class="logout">
            <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl" style="color: #184faf;"></i>
          </a>
          <h6>back</h6>
          <div class="mt-md-4">
            <h1 class="fw-bold font-weight-bold mb-2 text-uppercase text-dark display-6">ADMIN CONTROL</h1>
            <span>Add New User</span>
            <form action="/update/<%-userData._id%>" method="POST" class="pt-3" autocomplete="off">
              <div class="form-group form-primary mb-4 ">
                <input
                  name="name"
                  type="text"
                  id="typeNameX"
                  value="<%-userData.name%>"
                  class="form-control form-control-lg"
                  placeholder="Name"
                  required
                /> 
              </div>
              <div class="form-group form-primary mb-4">
                <input
                  name="email"
                  type="email"
                  id="typeEmailX"
                  value="<%-userData.email%>"
                  class="form-control form-control-lg"
                  placeholder="Email"
                  required
                /> 
              </div>
              <br />
              <br />
            
            <div class="d-flex justify-content-around">
              <button class="btn btn-outline-dark btn-lg px-6" id="logbtn" type="submit">
                Save
              </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</section>


<%-include('footer')-%>